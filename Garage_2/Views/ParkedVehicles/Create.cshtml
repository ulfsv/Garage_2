@model Garage_2.Models.ParkedVehicle

@{
    ViewData["Title"] = "Create";
}
<br />
<h1 class="text-black-50">Park Vehicle</h1>
@*<h1 class="btn btn-success bg-secondary">Park Vehicle</h1>*@


<hr />
<div class="row text-black-50">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RegisterNumber" class="control-label"></label>
                <input asp-for="RegisterNumber" class="form-control" />
                <span asp-validation-for="RegisterNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" placeholder ="@ViewData["MaxSpotsMsg"]"/>
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" placeholder ="@ViewData["MaxSpotsMsg"]"/>
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" class="form-control" placeholder ="@ViewData["MaxSpotsMsg"]"/>
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WheelsNumber" class="control-label"></label>
                <input asp-for="WheelsNumber" class="form-control" placeholder ="@ViewData["MaxSpotsMsg"]"/>
                <span asp-validation-for="WheelsNumber" class="text-danger"></span>
            </div>

            <hr />

            <div class="form-group">
                <label id="add-new-vehic-type-label" class="control-label">Add new vehicle type</label>
                <input type="checkbox" id="add-vehic-type" name="add-vehicle-type" value="1">
            </div>


            @*Add new vehicle type OR Choose from existing vehicle types*@

            <div class="form-group">
                <label id="add-new-vehic-type-input-label" class="control-label">Add new vehicle type</label>
                <input id="add-new-vehic-type-input" class="input-group-text" name="newVehicleType" placeholder="Please input new vehicle type name!" />

                @* Från ParkedVehiclesController.cs ModelState.AddModelError( *@
                <span class="text-danger">@Html.ValidationMessage("VehicTyp")</span>


                <label id="existing-vehicle-types-label" class="control-label">Choose from existing vehicle types</label>

                @* Från ViewBag.VehicleTypes *@
                @Html.DropDownList("VehicleTypes", null, new { id = "existing-vehicle-types-dropdown-select", @class = "browser-default custom-select" })

                @* Från ParkedVehiclesController.cs ModelState.AddModelError( *@
                <span class="text-danger">@Html.ValidationMessage("VehicTyp")</span>
            </div>

            <hr />

            <div class="form-group">
                <label class="control-label">Member</label>

                @* Från ViewBag.Members *@
                @Html.DropDownList("Members", null, new { @class = "browser-default custom-select" })

                @* Från ParkedVehiclesController.cs ModelState.AddModelError( *@
                <span class="text-danger">@Html.ValidationMessage("MemberId")</span>
            </div>

            <div class="form-group">
                <input type="submit" id="btn-park-vehicle" value="Park" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
