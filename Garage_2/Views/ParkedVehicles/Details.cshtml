@model Garage_2.Models.DetailsViewModels.DetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-black-50">Details</h1>

<div>
    <h4 class="text-black-50">ParkedVehicle</h4>
    <hr />
    <dl class="row text-black-50">

       
        <dd class="col-sm-12">
            <img src="@Model.MemberAvatar">
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MemberFullName)

        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MemberFullName)
        </dd>


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VehicleTypeVehicType/*VehicleType.VehicType*/)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VehicleTypeVehicType/*VehicleType.VehicType*/)
        </dd>





        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RegisterNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RegisterNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WheelsNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WheelsNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ParkedDateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ParkedDateTime)
        </dd>

        @*if Owner has more than one vehicle*@
        <dt class="col-sm-12"> @Html.DisplayNameFor(model => model.ParkedVehicles) belong to @Model.MemberFullName</dt>
        <dd class="col-sm-12">
            @foreach (var pv in Model.ParkedVehicles)

            {
                <a asp-controller="ParkedVehicles" asp-action="Details" asp-route-id="@pv.Id">@pv.RegisterNumber</a><br />

            }
        </dd>





    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
